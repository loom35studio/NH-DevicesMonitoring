              td
                a(onClick='openPopup('+"'"+'magentatoner-'+prnt[0].ID+"'"+')')
                  i.fa.fa-pencil-square-o(aria-hidden='true')
        if prnt[3].pages || prnt[3].percentage || prnt[3].drum || prnt[3].date

block general
  div(class="device" id="device-"+prnt[0].ID+"")
    div.device_header
      div.device_header_title
        if prnt[0].error == 1
          span(class="offline" title="Stampante Offline, i dati risalgono all'ultima connessione")
        else if prnt[0].error == 0
          span(class="online" title="Stampante Online")
        h2.device_header_title_name= prnt[0].name
        h3.device_header_title_model= prnt[0].model
      div.device_header_action
        a(onClick='openPopup('+"'"+'info-'+prnt[0].ID+"'"+')' class="action_btn")
          i.fa.fa-info(aria-hidden='true')
    table.device_table
        tr.device_table_header
            th
            th PAGINE
            th VALORE
            th INSERIMENTO
            th
              i.fa.fa-archive(aria-hidden='true')
            th
        tr.device_table_values
            td
              div.color.ye
            td= prnt[1].pages
            td= prnt[1].percentage + "%"
            if prnt[1].changed == 1
              td.warning= prnt[1].date
            else
              td= prnt[1].date
            td= prnt[1].stock
            td
              a(onClick='openPopup('+"'"+'yellowtoner-'+prnt[0].ID+"'"+')')
                i.fa.fa-pencil-square-o(aria-hidden='true')
        tr.device_table_values
            td
              div.color.ma
            td= prnt[2].pages
            td= prnt[2].percentage + "%"
            if prnt[2].changed == 1
              td.warning= prnt[2].date
            else
              td= prnt[2].date
            td= prnt[2].stock
            td
              a(onClick='openPopup('+"'"+'magentatoner-'+prnt[0].ID+"'"+')')
                i.fa.fa-pencil-square-o(aria-hidden='true')
        tr.device_table_values
            td
              div.color.cy
            td= prnt[3].pages
            td= prnt[3].percentage + "%"
            if prnt[3].changed == 1
              td.warning= prnt[3].date
            else
              td= prnt[3].date
            td= prnt[3].stock
            td
              a(onClick='openPopup('+"'"+'cyantoner-'+prnt[0].ID+"'"+')')
                i.fa.fa-pencil-square-o(aria-hidden='true')
        tr.device_table_values
            td
              div.color.bk
            td= prnt[4].pages
            td= prnt[4].percentage + "%"
            if prnt[4].changed == 1
              td.warning= prnt[4].date
            else
              td= prnt[4].date
            td= prnt[4].stock
            td
              a(onClick='openPopup('+"'"+'blacktoner-'+prnt[0].ID+"'"+')')
                i.fa.fa-pencil-square-o(aria-hidden='true')


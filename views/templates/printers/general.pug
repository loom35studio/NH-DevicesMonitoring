block general
  div(class="device" id="device-"+prnt[0].ID+"")
    div.device_header
      div.device_header_title
        if prnt[0].error == 1
          span(class="offline" title="Stampante Offline, i dati risalgono all'ultima connessione")
        else if prnt[0].error == 0
          span(class="online" title="Stampante Online")
        h2.device_header_title_name= prnt[0].name
        h3.device_header_title_model= prnt[0].model
      div.device_header_action
        a(onClick='openPopup('+"'"+'info-'+prnt[0].ID+"'"+')' class="action_btn")
          i.fa.fa-info(aria-hidden='true')
    table.device_table
        tr.device_table_header
            th
            th PAGINE
            th VALORE
            if prnt[1].drum || prnt[2].drum || prnt[3].drum || prnt[4].drum
              th DRUM
            th DATA
            th
              i.fa.fa-archive(aria-hidden='true')
            th
        if prnt[1].pages || prnt[1].percentage || prnt[1].drum || prnt[1].date
          tr.device_table_values
              td
                div.color.ye
              td= prnt[1].pages
              td= prnt[1].percentage + "%"
              if prnt[1].drum
                td= prnt[1].drum + "%"
              if prnt[1].date
                if prnt[1].changed == 1
                  td.changed= prnt[1].date
                else if prnt[1].changed == 2
                  td.death= prnt[1].date
                else
                  td= prnt[1].date
              else
                td= "❌"
              td= prnt[1].stock
              td
                a(onClick='openPopup('+"'"+'yellowtoner-'+prnt[0].ID+"'"+')')
                  i.fa.fa-pencil-square-o(aria-hidden='true')
        if prnt[2].pages || prnt[2].percentage || prnt[2].drum || prnt[2].date
          tr.device_table_values
